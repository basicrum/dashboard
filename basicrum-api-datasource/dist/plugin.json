{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Api",
  "id": "basicrum-api-datasource",
  "metrics": true,
  "info": {
    "description": "Basicrum rest api proxy",
    "author": {
      "name": "Basicrum"
    },
    "keywords": ["datasource"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [],
    "screenshots": [],
    "version": "1.0.0",
    "updated": "2023-10-11"
  },
  "dependencies": {
    "grafanaDependency": ">=10.0.3",
    "plugins": []
  },
  "routes": [
    {
      "method": "GET",
      "path": "basicrum",
      "reqRole": "Viewer",
      "url": "{{ .JsonData.url }}",
      "headers": [
        {
          "name": "X-TOKEN",
          "content": "{{ .SecureJsonData.apiToken }}"
        }
      ]
    },
    {
      "method": "POST",
      "path": "basicrum",
      "reqRole": "Viewer",
      "url": "{{ .JsonData.url }}",
      "headers": [
        {
          "name": "X-TOKEN",
          "content": "{{ .SecureJsonData.apiToken }}"
        }
      ]
    },
    {
      "method": "PUT",
      "path": "basicrum",
      "reqRole": "Viewer",
      "url": "{{ .JsonData.url }}",
      "headers": [
        {
          "name": "X-TOKEN",
          "content": "{{ .SecureJsonData.apiToken }}"
        }
      ]
    },
    {
      "method": "DELETE",
      "path": "basicrum",
      "reqRole": "Viewer",
      "url": "{{ .JsonData.url }}",
      "headers": [
        {
          "name": "X-TOKEN",
          "content": "{{ .SecureJsonData.apiToken }}"
        }
      ]
    }
  ]
}
